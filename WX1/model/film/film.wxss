.flex-list{
  flex-direction: row;
  white-space: nowrap;
}
.list-item{
  display: inline-block;
  height: 400rpx;
  width: 200rpx;
  margin-left: 20rpx;
  vertical-align: top;
}
.flex-list .list-item:last-child{
  margin-right: 20rpx;
}
.item-img{
  height:280rpx;
  width: 200rpx; 
}
.list-name{
  display: block;
  font-size:30rpx;
  text-align: center;
  width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
